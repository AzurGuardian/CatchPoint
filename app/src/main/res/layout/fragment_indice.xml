<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".IndiceFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indices obligatoires : "
        android:id="@+id/tvO"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvO"
            android:layout_marginTop="10dp"
            android:id="@+id/llO">

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvF"
        android:text="Indices facultatifs : "
        app:layout_constraintTop_toBottomOf="@id/llO"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvF"
        android:layout_marginTop="10dp"
        android:id="@+id/llF">

    </LinearLayout>

    <Button
        android:id="@+id/validIndice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="Indice supplÃ©mentaire"
        android:textColor="@color/textColorButton"
        app:layout_constraintTop_toBottomOf="@id/llF" />

</android.support.constraint.ConstraintLayout>