<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vince.catch_point.MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="Connexion"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/editLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editMotDePasse"
        android:layout_alignStart="@+id/editMotDePasse"
        android:layout_marginBottom="57dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Login"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimary" />

    <EditText
        android:id="@+id/editMotDePasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="207dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPersonName"
        android:password="true"
        android:textColorLink="@color/colorPrimary" />

    <TextView
        android:id="@+id/Error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/connexionButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/connexionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:background="@drawable/button"
        android:text="Connexion"
        android:textColor="@color/textColorButton" />
</RelativeLayout>
